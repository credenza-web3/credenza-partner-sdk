{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "esnext",
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "nodenext",
    "paths": {
      "@/*": ["./src/*"],
      "@evm/*": ["./src/evm/*"],
      "@sui/*": ["./src/sui/*"],
      "@general/*": ["./src/general/*"],
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "demo/**/*",
  ]
}
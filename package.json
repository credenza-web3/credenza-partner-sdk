{
  "name": "@credenza3/partner-sdk",
  "version": "0.0.0-alpha.1",
  "description": "Credenza partner sdk",
  "main": "dist/cjs/index.js",
  "types": "dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/credenza-web3/credenza-partner-sdk.git"
  },
  "author": "Credenza (Dmytro Fokin)",
  "scripts": {
    "build:cjs": "tsc && tsc-alias",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:declaration": "tsc -p tsconfig.declaration.json --emitDeclarationOnly",
    "build": "pnpm run build:cjs && pnpm run build:esm && pnpm run build:declaration",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix --max-warnings 0",
    "test": "echo \"Error: no test specified\"",
    "prepare": "husky",
    "pre-commit-lint": "lint-staged",
    "demo": "pnpm run build:cjs && cd ./demo && pnpm run start",
    "demo:install": "cd ./demo && pnpm install"
  },
  "exports": {
    "./sui": {
      "require": "./dist/cjs/sui/index.js",
      "import": "./dist/esm/sui/index.js",
      "types": "./dist/types/sui/index.d.ts"
    },
    "./evm": {
      "require": "./dist/cjs/evm/index.js",
      "import": "./dist/esm/evm/index.js",
      "types": "./dist/types/evm/index.d.ts"
    },
    "./common": {
      "require": "./dist/cjs/common/index.js",
      "import": "./dist/esm/common/index.js",
      "types": "./dist/types/common/index.d.ts"
    },
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "/dist"
  ],
  "dependencies": {
    "buffer": "^6.0.3",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.5.4"
  }
}
